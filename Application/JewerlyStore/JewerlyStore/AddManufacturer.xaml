<Window x:Class="JewerlyStore.AddManufacturer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewerlyStore"
        mc:Ignorable="d"
        Title="AddManufacturer" Height="290" Width="500">
    <Grid Background="#FF8696DE">
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Margin="0 40 0 0">Manufacturer Name</Label>
        <TextBox x:Name="manufacturerBox" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 70 0 0" Width="200" Height="24"></TextBox>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Margin="0 100 0 0">Select Country Name</Label>
        <ComboBox x:Name="selectCountry" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 130 0 0" Width="200" Height="24" DropDownOpened="selectCountries"></ComboBox>
        <Button VerticalAlignment="Top" HorizontalAlignment="Center" Width="80" Height="30" Margin="0 195 0 0" FontSize="18" Background="#FFDC6060" Click="addManufacturerClick">Add</Button>
    </Grid>
</Window>
