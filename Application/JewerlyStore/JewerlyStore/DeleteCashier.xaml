<Window x:Class="JewerlyStore.DeleteCashier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewerlyStore"
        mc:Ignorable="d"
        Title="DeleteCashier" Height="190" Width="400">
    <Grid Background="#FFC970C1">
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Margin="0 30 0 0">Select Cashier E-mail</Label>
        <ComboBox x:Name="delEmailBox" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="24" Margin="0 60 0 0" DropDownOpened="selectEmails"></ComboBox>
        <Button VerticalAlignment="Top" HorizontalAlignment="Center" Width="60" Height="24" Margin="0 110 0 0" FontSize="14" Background="#FF8D54C7" Click="delEmailClick">Delete</Button>
    </Grid>
</Window>
